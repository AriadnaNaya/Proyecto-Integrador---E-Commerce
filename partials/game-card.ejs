<% for(var i = 0; i < gameList .length; i++) { %>
  <a href="/detalle/<%= i %>" class="card-wrapper">
    <div class="card">
      <div class="card-img" style="background-image: url('<%=  gameList [i].background_image %>');">
        <p class="card-title"><%=  gameList [i].name %></p>
      </div>
      <div class="card-body">
        <div class="price">
          <div class="value">
            <p><span class="badge badge-sunflower">25%</span> $1.200,00</p>
            <div class="discount">
              <small>$1.500.00</small>
            </div>
          </div>
          <i class="fa fa-cart-plus"></i>
        </div>
        <p class="legend">
          <small>Disponible para:</small>
        </p>
        <% for (var j=0; j< gameList [i].stores.length; j++) { %>
          <% if ( gameList [i].stores[j].store.slug === 'steam') { %>
            <i class="icon-steam"></i>
          <% } %>
          <% if ( gameList [i].stores[j].store.slug === 'epic-games') { %>
            <i class="icon-epic"></i>
          <% } %>
          <% if ( gameList [i].stores[j].store.slug === 'gog') { %>
            <i class="icon-gog"></i>
          <% } %>
          <% if ( gameList [i].stores[j].store.slug === 'xbox-store') { %>
            <i class="icon-xbox"></i>
          <% } %>
        <% } %>
      </div>
    </div>
  </a>
<% } %>