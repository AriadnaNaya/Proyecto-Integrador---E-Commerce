<!DOCTYPE html>
<html lang="en">

<head>

	<%- include('../partials/head', {title: 'Crear producto'}) %>

</head>

<body>

	<!-- navbar header -->
	<%- include('../partials/header', {nombre: 'Homero', apellido: 'Thompson'}) %>
	<!-- /.navbar header -->

	<!-- home content -->

	<section class="container">
		<div class="row">
			<div class="col-12">
				<h4>CREACIÓN DE PRODUCTO</h4>
			</div>
		</div>
		<form class="row" action="/productos/create" method="POST">
			<div class="col-6 col-md-6">

				<div class="form-group">
					<label for="name">Título</label>
					<input type="text" class="form-control" name="name" required>
				</div>
				<div class="btn-group mt-3 mb-4">
					<input type="file" class="btn btn-primary">
				</div>
				<div class="form-group">
					<label>Plataforma: </label>
					<div class="form-check form-check-inline">
						<input class="form-check-input" type="checkbox" name="available_in" value="Steam">
						<label class="form-check-label" for="Steam">Steam</label>
					</div>
					<div class="form-check form-check-inline">
						<input class="form-check-input" type="checkbox" name="available_in" value="Epic Games">
						<label class="form-check-label" for="Epic Games">Epic Games</label>
					</div>
					<div class="form-check form-check-inline">
						<input class="form-check-input" type="checkbox" name="available_in" value="X-Box Store">
						<label class="form-check-label" for="X-Box Store">X-Box Store</label>
					</div>
					<div class="form-check form-check-inline">
						<input class="form-check-input" type="checkbox" name="available_in" value="GOG">
						<label class="form-check-label" for="GOG">GOG</label>
					</div>
				</div>
				<div class="form-group">
					<label for="about">Acerca del juego</label>
					<textarea class="form-control" name="about" rows="3" required></textarea>
				</div>
				<div class="form-group">
					<label for="categories">Categorías</label>
					<input type="text" class="form-control" name="categories" required>
					<small>Puede agregar más de una y separarlas con una coma ","</small>
				</div>

				<div class="row">
					<div class="form-group col my-3">
						<label for="price">Precio en ARS$</label>
						<input type="text" class="form-control" placeholder="" name="price" required>
					</div>
					<div class="form-group col my-3">
						<label for="descuento">Descuento (%)</label>
						<input type="text" class="form-control" placeholder="" name="discount" required>
					</div>
				</div>
				<div class="row">
					<div class="form-group col my-3">
						<label for="urlTrailer">URL Trailer</label>
						<input type="text" class="form-control" placeholder="" name="game_trailer" required>
					</div>
				</div>
				<div class="row">
					<div class="form-group col my-3">
						<label for="urlGameplay">URL Gameplay</label>
						<input type="text" class="form-control" placeholder="" name="game_gameplay">
					</div>
				</div>
				<div class="row">
					<div class="form-group col my-3">
						<label for="urlReview">URL Review</label>
						<input type="text" class="form-control" placeholder="" name="game_review">
					</div>
				</div>
				<div class="btn-group mt-3">
					<button type="submit" class="btn btn-primary">Cargar producto</button>
				</div>

			</div>

		</form>
	</section>

	<!-- /.home content -->

	<%- include('../partials/footer') %>

	<%- include('../partials/scripts') %>

</body>

</html>