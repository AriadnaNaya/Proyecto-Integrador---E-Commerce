<!DOCTYPE html>
<html>

<head>
	<%- include('../partials/head') %>
</head>

<body>
	<!-- navbar header -->
	<%- include('../partials/header') %>
	<!-- /.navbar header -->

	<!-- home content porque no trae imagen lala -->
	<div class="container">

		<div class="product-detail row">
			<!-- videos -->
			<div class="videos col-12 col-md-7">
				<div class="top-content">
					<div id="carousel-example" class="carousel slide">
						<div class="carousel-inner">
							
							<div class="carousel-item active">
								<div class="embed-responsive embed-responsive-16by9">
									<% if (juego.game_trailer != undefined) { %>
										<video width="560" height="315" src="<%= juego.game_trailer %>" id="trailer" controls
										muted autoplay></video>
									<% } %>
									<% if (juego.game_trailer == undefined) { %>
									<iframe width="560" height="315" src="<%= juego.game_trailer %>?mute=1" frameborder="1"
										allow="accelerometer; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
									<% } %>
								</div>
							</div>
							<% if (juego.game_gameplay != null) { %>
							<div class="carousel-item">
								<div class="embed-responsive embed-responsive-16by9">
									<iframe width="560" height="315"
										src="<%= juego.game_gameplay %>?mute=1" frameborder="1"
										allow="accelerometer; encrypted-media; gyroscope; picture-in-picture"
										allowfullscreen></iframe>
								</div>
							</div>
							<% } %>
							<% if (juego.game_review != null) { %>
							<div class="carousel-item">
								<div class="embed-responsive embed-responsive-16by9">
									<iframe width="560" height="315"
										src="<%= juego.game_review %>?mute=1" frameborder="2"
										allow="accelerometer; encrypted-media; gyroscope; picture-in-picture"
										allowfullscreen></iframe>
								</div>
							</div>
							<% } %>

						</div>
					</div>
					<div class="filters">
						<div class="carousel-indicators">
							<button id="trailer" data-target="#carousel-example" type="button" class="btn btn-primary"
								data-slide-to="0"><i class="material-icons">videocam</i></button>

							<% if (juego.game_gameplay != null) { %>
							<button id="gameplay" data-target="#carousel-example" type="button" class="btn btn-primary"
								data-slide-to="1"><i class="material-icons">videogame_asset</i></button>
							<% } %>

							<% if (juego.game_review != null) { %>
							<button id="honest" data-target="#carousel-example" type="button" class="btn btn-primary"
								data-slide-to="2"><i class="material-icons">gavel</i></button>
							<% } %>
							<div class="d-flex flex-column justify-content-center">
								<p class="m-0 p-0">
									<small>Actualmente reproduciendo:</small>
								</p>
								<h4 class="m-0 p-0 trailer">Trailer</h4>
								<h4 class="m-0 p-0 gameplay">Gameplay</h4>
								<h4 class="m-0 p-0 honest">Honest review</h4>
							</div>
						</div>
					</div>
				</div>
			</div>
			<!-- //videos -->
			<!-- gameInfo -->
			<div class="product-overview col-12 col-md-5">
				<div class="imagen">
					<img src="<%=juego.background_image %>" alt="Imagen civ">
				</div>
				<div class="overview-data">
					<h4 class="product-title"><%= juego.name %></h4>
					<p><span>Desarrollado por: </span>
						<% if (juego.developers != null) { %>
							<% for (var i=0; i< juego.developers.length; i++) { %>
							<span><%= juego.developers[i] %></span>
							<% } %>
						<% } %>
					</p>
					<% if (juego.released) { %>
						<p>Fecha de Lanzamiento: <%= juego.released %></p>
					<% } %>

					<!-- tags -->
					<% if (juego.categories) { %>
					<div class="my-2">
						<% for (var i=0; i< juego.categories.length; i++) { %>
						<span class="badge badge-secondary"><%= juego.categories[i].name %></span>
						<% } %>
					</div>
					<% } %>
					<!-- //tags -->

					<div class="row">
						<div class="btn-group">
							<button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown"
								aria-haspopup="true" aria-expanded="false">
								Plataforma
							</button>
							<div class="price">
								<h6>ARS$ <strong><%= juego.price %></strong></h6>
							</div>
							<div class="dropdown-menu">
								<% for (var j=0; j< juego.store.length; j++) { %>
								<% if ( juego.store[j] === 'Steam') { %>
								<a class="dropdown-item" href="javascript:void(0)"><i class="icon-steam" title="<%= juego.store[j]%>"></i> Steam</a>
								<% } %>
								<% if ( juego.store[j] === 'Epic Games') { %>
								<a class="dropdown-item" href="javascript:void(0)"><i class="icon-epic" title="<%= juego.store[j]%>"></i> Epic
									Games</a>
								<% } %>
								<% if ( juego.store[j] === 'GOG') { %>
								<a class="dropdown-item" href="javascript:void(0)"><i class="icon-gog" title="<%= juego.store[j]%>"></i> GOG</a>
								<% } %>
								<% if ( juego.store[j] === 'X-Box Store') { %>
								<a class="dropdown-item" href="javascript:void(0)"><i class="icon-xbox" title="<%= juego.store[j]%>"></i> X-Box
									Store</a>
								<% } %>
								<% } %>
							</div>
						</div>
						<form method="GET" action="carrito" class="btn-group">
							<button type="button" class="btn btn-success"><i
									class="material-icons">vertical_align_bottom</i> Demo</button>
							<button type="submit" class="btn btn-primary"><i class="material-icons">shopping_cart</i>
								Comprar</button>
						</form>


					</div>
				</div>
			</div>
			<!-- //gameInfo -->
		</div>
	</div>
	<!-- ratings	 -->
	<% if (juego.ratings) { %>
