<!DOCTYPE html>
<html>

<head>
  <%- include('../partials/head') %>
</head>

<body class="login">
  <!-- navbar header -->
  <%- include('../partials/navbar') %>
  <!-- /.navbar header -->

  <!-- home content -->
  <div class="container">
    <div class="row ">
      <div class="col-12 col-md-4 login-screen">
        <div id="logo-container">
          <% if (typeof errors != 'undefined') { %>
          <% for (error of errors) { %>
          <div class="badge badge-danger"><%= error.msg %></div>
          <% } %>
          <% } %>
          <!-- enctype="multipart/form-data" -->
          <form action="/users/create" method="POST" id="loginForm" >
            <div class="form-group">
              <label for="name">Nombre</label>
              <div class="input-group">
                <input class="form-control" type="text" name='name' id='name' tabindex="1" />
                <span class="input-group-append"><i class="input-group-text fa fa-user"></i></span>
              </div>
              <div class="message invalid-feedback user">
                <small class="">Usuario inexistente</small>
              </div>
            </div>

            <div class="form-group">
              <label for="lastname">Apellido</label>
              <div class="input-group">
                <input class="form-control" type="text" name='lastname' id='lastname' tabindex="2" />
                <span class="input-group-append"><i class="input-group-text fa fa-user"></i></span>
              </div>
              <div class="message invalid-feedback user">
                <small class="">Usuario inexistente</small>
              </div>
            </div>
            <div class="form-group">
              <label for="email">Email</label>
              <div class="input-group">
                <input class="form-control" type="text" name='email' id='email' tabindex="3" />
                <span class="input-group-append"><i class="input-group-text fa fa-envelope"></i></span>
              </div>
              <div class="message invalid-feedback email">
                <small class="">Email inexistente</small>
              </div>
            </div>
            <div class="form-group">
              <label for="password">Contraseña</label>
              <div class="input-group">
                <input class="form-control" type="password" name='password' id='password' tabindex="4" />
                <span class="input-group-append"><i class="input-group-text fa fa-lock"></i></span>
              </div>
              <div class="message invalid-feedback password">
                <small class="">Clave incorrecta</small>
              </div>
            </div>

            <div class="form-group">
              <label for="passwordConfirm">Repetir Contraseña</label>
              <div class="input-group">
                <input class="form-control" type="password" name='passwordConfirm' id='passwordConfirm' tabindex="5" />
                <span class="input-group-append"><i class="input-group-text fa fa-lock"></i></span>
              </div>
              <div class="message invalid-feedback password">
                <small class="">Clave incorrecta</small>
              </div>
            </div>


            <!-- <div class="input-group">
              <label for="Avatar" class="form-label">Imagen de perfil : </label>
              <input type="file" accept="image/*" id="avatar" name="avatar" tabindex="6">
            </div> -->

            <p>
              <small class="mb-3 text-pink">Al Registrarte, aceptas nuestras condiciones de uso y políticas de
                privacidad</small>
            </p>

            <div class="form-group">
              <button type="submit" class="btn btn-default btn-block" tabindex="7">Registrate</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <!-- /.home content -->

  <%- include('../partials/footer') %>

  <%- include('../partials/scripts') %>
</body>

</html>
